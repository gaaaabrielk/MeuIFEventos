<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewEventosTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos da Turma"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEventos"
        android:layout_width="match_parent"
        android:layout_height="455dp" />

    <Button
        android:id="@+id/btnVoltarInicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar à Tela Inicial"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnVoltarTurma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar para Seleção de Turmas"
        android:layout_marginTop="8dp" />


</LinearLayout>
