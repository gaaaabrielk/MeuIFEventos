<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Exibe o nome do item solicitado -->
    <TextView
        android:id="@+id/tvItemNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Item Solicitado: "
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- Exibe o ID do item -->
    <TextView
        android:id="@+id/tvItemId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID do Item: "
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Exibe o ID do aluno -->
    <TextView
        android:id="@+id/tvAlunoId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aluno ID: "
        android:textSize="16sp"
        android:padding="8dp" />

    <!-- Botão para registrar a solicitação -->
    <Button
        android:id="@+id/btnSolicitar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar"
        android:layout_gravity="center"
        android:padding="12dp" />
</LinearLayout>
