<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#FFFFFF">

    <!-- Layout vertical para os textos -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textViewNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Item"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewDescricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewLocalEncontrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Local Encontrado"
            android:textSize="14sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewDataEncontrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Encontrado"
            android:textSize="14sp"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Botão ao lado -->
    <Button
        android:id="@+id/devolver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="devolver"
        android:textSize="14sp"
        android:layout_marginRight="14dp"
        android:layout_gravity="center_vertical" />
</LinearLayout>
